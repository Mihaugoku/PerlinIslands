{
    "version": 3,
    "configurePresets": [
      //WINDOWS x64 release preset
      {
        "name": "x64-release",
        "displayName": "x64 Release",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/out/build/${presetName}",
        "installDir": "${sourceDir}/out/install/${presetName}",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "cl.exe",
          "CMAKE_CXX_COMPILER": "cl.exe"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        },
        "architecture": {
          "value": "x64",
          "strategy": "external"
        }
      }
    ]
}
